--- 

import Stack from "../components/stack.astro"; 
import Pill from "../components/pill.astro";
import About from "../components/about.astro";
import Divider from "../components/divider.astro";
import Template from "../layouts/template.astro";

---

<Template>
	<section id="header" class="min-h-screen w-full px-10 md:px-0 md:w-2/3 lg:w-3/4 xl:w-2/3 flex flex-col lg:flex-row gap-4 items-center xl:justify-between">
		<article class="flex fade-in flex-col gap-3 w-full lg:w-[40%] py-20 lg:py-0 overflow-hidden">
			<p class="text-gray-400">
				Bienvenido a mi sitio web personal
			</p>
	
			<h1 class="text-6xl font-bold overflow-hidden">
				Soy <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 overflow-hidden">Xavier Morell</span>, desarrollador <span class="text-yellow-500">fullstack</span>.
			</h1>
	
			<p class="mt-5 text-gray-400">
				Nacido y residente en Barcelona, especializado en el desarrollo integral de aplicaciones web y móviles. Fanático de la tecnología y el desarrollo de software.
			</p>

			<section class="mt-3 flex">
				<Pill ball="bg-green-500" box="bg-green-500/10 border-green-500" >
					Empleado
				</Pill>
			</section>
		</article>

		<img 
			draggable="false"
			class="w-full lg:w-1/2"
			src="https://static.vecteezy.com/system/resources/previews/011/153/363/original/3d-web-developer-working-on-project-illustration-png.png"
		/>
	</section>

	<section id="counter" class="w-full mb-40 px-10 md:px-0 md:w-2/3 lg:w-3/4 xl:w-2/3 flex flex-col lg:flex-row justify-center mt-32 lg:mt-0 divide-x-0 lg:divide-x-2">
		<Divider index="+5" content="Años de experiencia" />
		<Divider index="+40" content="Proyectos realizados" />
		<Divider index="+10" content="Tecnologías dominadas" />
	</section>

	<About /> 

	<Stack />
</Template>