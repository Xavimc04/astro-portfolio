---

import { LanguageSelector } from "astro-i18next/components"; 
import { t } from "i18next";
import ColoredArrows from './../../public/assets/images/colored-arrows.png';
import { Image } from "astro:assets";

---

<nav class="flex items-center p-4 w-full">
    <!-- @ Left section -->
    <section id="name" class="flex items-center flex-1 lg:w-1/4 gap-4">
        <Image 
            src={ ColoredArrows }
            alt="logo"
            width="35"
            loading="eager"
        />

        <h1>Xavier Morell</h1>
    </section>

    <!-- @ Right section -->
    <section class="justify-end gap-4">
        <LanguageSelector showFlag={ true } class="bg-transparent" />
    </section>
</nav>