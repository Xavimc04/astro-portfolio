---

import ExperienceCategory from './experience-category.astro'
import Avannubo from './../../public/assets/images/avannubo.png'
import Monlau from './../../public/assets/images/monlau.png'
import Sosmatic from './../../public/assets/images/sosmatic.png'
import Fivem from './../../public/assets/images/fivem.png'
import { t } from 'i18next'
import { Trans } from 'astro-i18next/components'

const elements = [
    {
        type: "work",
        company: "Avannubo",
        position: t('components.experience.elements.avannubo.position'),
        icon: Avannubo,
        date: t('components.experience.elements.avannubo.date'),
        description: t('components.experience.elements.avannubo.description'),
        color: "text-red-400"
    },
    {
        type: "work", 
        company: "SOSMatic", 
        position: t('components.experience.elements.sosmatic.position'),
        icon: Sosmatic,
        date: t('components.experience.elements.sosmatic.date'),
        description: t('components.experience.elements.sosmatic.description'),
        color: "text-blue-400"
    },
    {
        type: "work", 
        company: "Freelancer", 
        position: t('components.experience.elements.freelancer.position'),
        icon: Fivem,
        date: t('components.experience.elements.freelancer.date'),
        description: t('components.experience.elements.freelancer.description'),
        color: "text-orange-400"
    },
    {
        type: "education", 
        company: "Monlau Formación Profesional",
        position: t('components.experience.elements.daw.position'), 
        icon: Monlau,
        date: t('components.experience.elements.daw.date'),
        description: t('components.experience.elements.daw.description'),
        color: "text-blue-400"
    },
    {
        type: "education", 
        company: "Monlau Formación Profesional", 
        position: t('components.experience.elements.smx.position'),
        icon: Monlau,
        date: t('components.experience.elements.smx.date'),
        description: t('components.experience.elements.smx.description'),
        color: "text-blue-400"
    }
]

---

<section id="experience" class="w-full px-10 md:px-0 md:w-2/3 lg:w-3/4 xl:w-2/3 flex flex-col xl:flex-row mb-32 gap-32">
    <div class="flex-1 flex flex-col gap-10">
        <h2 class="text-5xl font-bold py-3">
            <Trans i18nKey='components.experience.working'>
                Experiencia <span class="underline underline-offset-3 decoration-8 decoration-blue-600">laboral</span>
            </Trans>
        </h2>
    
        <ExperienceCategory 
            elements={elements.filter(e => e.type === "work")}
        />
    </div>

    <div class="flex-1 flex flex-col gap-7">
        <h2 class="text-5xl font-bold py-3">
            <Trans i18nKey='components.experience.educational'>
                Formación <span class="underline underline-offset-3 decoration-8 decoration-blue-600">educativa</span>
            </Trans>
        </h2>
    
        <ExperienceCategory 
            elements={elements.filter(e => e.type === "education")}
        />
    </div>
</section>